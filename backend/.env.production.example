# Production Environment Variables Template
# Copy this file to .env and fill in your production values

# Django Settings
SECRET_KEY=your-production-secret-key-here-generate-new-one
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration (PostgreSQL via Supabase)
DATABASE_HOST=db.your-supabase-project.supabase.co
DATABASE_NAME=postgres
DATABASE_USER=postgres
DATABASE_PASSWORD=your-production-database-password
DATABASE_PORT=5432

# Supabase API
DB_PROJECT_URL=https://your-supabase-project.supabase.co
DB_ANON_KEY=your-supabase-anon-key

# Email Configuration (Gmail App Password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# PayPal Configuration (LIVE MODE for production)
PAYPAL_MODE=live
PAYPAL_CLIENT_ID=your-live-paypal-client-id
PAYPAL_CLIENT_SECRET=your-live-paypal-client-secret

# Stripe Configuration (LIVE MODE for production)
STRIPE_SECRET_KEY=sk_live_your-live-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-live-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-production-webhook-secret
